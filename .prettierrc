{
  "overrides": [
    {
      "files": "*.jsx",
      "options": {
        "bracketSameLine": true,
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "arrowParens": "avoid"
      }
    }
  ]
}
